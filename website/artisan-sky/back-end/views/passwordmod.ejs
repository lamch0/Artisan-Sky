  <!-- content -->
  <div class="col d-flex text-center" style="width: 100vw">
    <main class="form-signin">
      <form action="/pwmod?_method=PUT" method = "POST">
        <h1 class="h3 mb-3 fw-normal">Profile</h1>
        <p></p>
        <!--This line need server data-->
        <% if (messages.info) { %>
            <img class="rounded-circle me-2" src=<%=messages.info %> alt="" width="150" height="150"/>
        <% } %>        
        <!--end-->
        <p></p>
        <!--This two lines need server data-->
        <p class="h5 mb-2 fw-normal">Name: <%= name %></p>
        <p class="h5 mb-2 fw-normal">Email: <%= email %></p>
        <!--end-->
        <div class="form-floating">
          <input type="oldpassword" class="form-control" name="og_pw" id="floatingOldPassword" placeholder="" required>
          <label for="floatingOldPassword">Old Password</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" name="new_pw" id="floatinNewgPassword" placeholder="" required>
          <label for="floatingNewPassword">New Password</label>
        </div>
        <div class="form-floating">
          <input type="re-password" class="form-control" id="floatingConfirmPassword" placeholder="ConfirmPassword" required>
          <label for="floatingConfirmPassword">Confirm Password</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit" id="btnSubmit">Change Password</button>
        <% if (messages.fail) { %>
            <%= messages.fail %>
        <% } %>
        <% if (messages.success) { %>
            <%= messages.success %>
        <% } %>
      </form>
      <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
      <script type="text/javascript">
        $(function () {
          $("#btnSubmit").click(function () {
            var password = $("#floatinNewgPassword").val();
            var confirmPassword = $("#floatingConfirmPassword").val();
            if (password != confirmPassword) {
              alert("Passwords do not match.");
              return false;
            }
            return true;
          });
        });
      </script>
    </main>
  </div>
